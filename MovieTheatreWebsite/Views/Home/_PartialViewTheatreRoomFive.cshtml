@model MovieTheatreDatabase.Reservation
<style>

    .seats {
        text-align: center;
        width: 750px;
    }

</style>

@for (int i = 1; i <= @Model.MovieTheatreRoom.TheatreRoom.ChairCount; i++)
{
    if ((ViewBag.SelectedChairs as List<int>).Contains(i))
    {
        if ((ViewBag.TakenChairs as List<int>).Contains(i))
        {
            <input type="checkbox" size="80px" class="checkBoxChairsClass checkBoxChairsClass1" id="checkBoxChairs" name="checkBoxChairs" value="@i" checked="checked" onclick="return false">
        }
        else
        {
            <input type="checkbox" class="checkBoxChairsClass" id="checkBoxChairs" name="checkBoxChairs" value="@i" checked="checked">
        }

    }
    else
    {
        <input type="checkbox" class="checkBoxChairsClass" id="checkBoxChairs" name="checkBoxChairs" value="@i">
    }
    switch (i)
    {
        case 15:
        case 30:
        case 40:
        case 50:
            <br />
            break;

        default:
            Console.WriteLine("Unknown value");
            break;
    }
}