@using MovieTheatreModels.Enums
@using MovieTheatreDatabase
@model MovieTheatreDatabase.Survey

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<form asp-action="CreateUserAnswer">
    @foreach (var surveyQuestion in @Model.Questions)
    {   
        <div class="form-group">
            <label asp-for="Questions" class="control-label">@surveyQuestion.Text</label>
            <select class="form-control" asp-items="Html.GetEnumSelectList<QuestionOptionEnums>()"> <option>Select</option></select> 
            <span asp-validation-for="@surveyQuestion.Text" class="text-danger"></span>
        </div>
    }
    
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="CreateUserAnswer" class="btn btn-primary" />
    </div>

</form>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
